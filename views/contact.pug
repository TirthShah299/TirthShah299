extends base.pug

block scripts
    script(src='/static/index.js')

block style
    style
      include ../static/style.css
      include ../static/styleContact.css

block content 
    div.container
        h1 Contact Us
        form(action="/contact", method="POST", class="myform")
            input(type="text", class="myinp", name="name", placeholder="Enter your Name")
            input(type="phone", class="myinp", name="phone", placeholder="Enter your Phone Number")
            input(type="email", class="myinp", name="email", placeholder="Enter your email-id")
            input(type="text", class="myinp", name="address", placeholder="Enter your Address")
            input(type="text", class="myinp", name="concern", placeholder="Enter your valuable Feedback")
            button.btn
                | Submit    